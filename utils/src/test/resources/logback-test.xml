<?xml version="1.0" encoding="UTF-8"?>
<configuration>

	<timestamp key="byMonth" datePattern="yyyyMM"/>

	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<layout class="ch.qos.logback.classic.PatternLayout">
			<pattern>%d{yyyy-MM-dd HH:mm:ss} | %-5p | %25([%-25.25thread]) | %32(%-32.32logger{32}:%L) | %msg%n</pattern>
		</layout>
	</appender>

	<appender name="TRACE" class="ch.qos.logback.core.FileAppender">
		<file>traces-sipil-${byMonth}.log</file>
		<encoder>
			<pattern>%msg%n</pattern>
		</encoder>
	</appender>


	<logger name="org.springframework" level="ERROR" additivity="false">
		<appender-ref ref="STDOUT" />
	</logger>
	<logger name="org.springframework.security" level="ERROR"
		additivity="false">
		<appender-ref ref="STDOUT" />
	</logger>
	<logger name="org.apache.xml.security" level="ERROR" additivity="false">
		<appender-ref ref="STDOUT" />
	</logger>
	<logger name="org.apache" level="ERROR" additivity="false">
		<appender-ref ref="STDOUT" />
	</logger>
	<root level="ERROR">
		<appender-ref ref="STDOUT" />
	</root>
</configuration>